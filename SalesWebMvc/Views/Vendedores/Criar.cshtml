@model SalesWebMvc.Models.ViewModels.VendedorFormViewModels
@{
    ViewData["Title"] = "Adicionar um vendedor";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Vendedores.Nome" class="control-label"> </label>
                <input asp-for="Vendedores.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.Email" class="control-label"> </label>
                <input asp-for="Vendedores.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.dataNascimento" class="control-label"> </label>
                <input asp-for="Vendedores.dataNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.salarioBase" class="control-label"> </label>
                <input asp-for="Vendedores.salarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.DepartamentosId" class="control-label"></label>
                <select asp-for="Vendedores.DepartamentosId" asp-items="@(new SelectList(Model.Departamentos,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
