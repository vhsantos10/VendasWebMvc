@model IEnumerable<SalesWebMvc.Models.Vendedores>
@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Criar" class="btn btn-default">Add Vendedor</a>
</p>



<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(Model => Model.Nome);
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email);
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.dataNascimento);
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.salarioBase);
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.Nome);
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Email);
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.dataNascimento);
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.salarioBase);
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Detalhe" asp-route-id="@item.Id">Detalhe</a>
                    <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

